                        android:scaleType="fitCenter"
                        android:src="@drawable/bird" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Bird"
                        android:textColor="@color/Code555555" />
